<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    tools:context="com.testgrader.ui.MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/cameraWarningLnLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:colorBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/main_image_camera"
            android:src="@drawable/ic_camera"
            app:tint="?colorOnBackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_camera_permission_is_not_granted"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/grantPermissionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/main_button_grant_permission" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/cameraFeedLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <org.opencv.android.JavaCameraView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="?android:colorBackground"
            app:camera_id="any" />

        <com.testgrader.ui.DetectionBoundariesView
            android:id="@+id/detectionBoundsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
<!--        -->
<!--        <com.testgrader.ui.FormOverlayView-->
<!--            android:id="@+id/formOverlayView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="?colorSurface"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/formCaptureButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/main_button_scan_document"
            app:icon="@drawable/ic_scan_document"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="?colorSurface"
            android:backgroundTint="?colorOnSurface"
            android:src="@drawable/ic_scan_document" />
    </LinearLayout>
</LinearLayout>